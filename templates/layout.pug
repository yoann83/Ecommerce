<!DOCTYPE html>
html(lang="fr")
    head
    //--------------------------- INSERTION DES META --------------------------
    block meta
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
    //--------------------- INSERTION DU TITLE DYNAMIQUE ----------------------
    block title
        title NodeJS - Express
    //----------------------------- INSERTION DU CSS --------------------------
    block css
        link(href="css/style.css" rel="stylesheet")
        // Bootstrap CSS
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
    block fontawesome
        link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous")

    body

    //--------------------------- INSERTION DU HEADER -------------------------
    header#header.container-fluid
        nav
            .form-group
            ul.nav.justify-content-end.container-fluid
                if session.user
                    li(class='nav-item')
                        a.nav-link.active(href='/') Accueil
                    li(class='nav-item')
                        a.nav-link.active(href='/article')
                            i.fas.fa-shopping-basket(title="Articles")  Tout nos articles
                    li(class='nav-item')
                        a.nav-link.active(href='/connection')
                            i.fas.fa-sign-out-alt(title="Déconnexion") Déconnexion
                else
                    li(class='nav-item')
                        a.nav-link.active(href='/connection')
                            i.fas.fa-sign-out-alt(title="Connexion")  Connexion
                    li(class='nav-item')
                        a.nav-link.active(href='/inscription')
                            i.fas.fa-user-plus(title="Inscription")  Inscription
    main
        div#page.container-fluid
            block content

    //--------------------------- INSERTION DU JS ---------------------------
    footer
        block scritps
            script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
                integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
                crossorigin="anonymous")
            script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
                integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
                crossorigin="anonymous")
            script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
                integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
                crossorigin="anonymous")